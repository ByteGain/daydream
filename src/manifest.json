{
  "name": "Daydream",
  "version": "3.0.1",
  "manifest_version": 2,
  "icons": {
    "128": "images/icon128.png"
  },
  "description": "A chrome extension to record your actions into a nightmare script.",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "*://*/"
  ],
  "browser_action": {
    "default_icon": "images/icon-black.png",
    "default_title": "Daydream"
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  }
}
